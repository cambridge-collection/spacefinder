<% content_for :title, "Spacefinder Administration Overview" %>
<% content_for :body_class, "small-page" %>

<div class="container overview">
    <a href="#" id="edit-space-link"><i class="icon-pencil"></i>Edit an existing space</a>
    <%= link_to new_space_path do %>
      <i class="icon-add"></i>Add a new space
    <% end %>
    <%= link_to admin_review_path do %>
      <i class="icon-callout"></i><span>Review Tips <span class="bubble"><%= @tips_review_count %></span></span>
    <% end %>
</div>

<div id="spaces" style="display:none;">
    <select id="spaces-list">
      <%= @space_groups.each do |library, spaces| %>
        <optgroup label="<%= library %>">
        <%= spaces.each do |id, name, library_id| %>
          <option value="<%= id %>"><%= name %></option>
        <% end %>
        </optgroup>
      <% end %>
    </select>
    <a href="#" id="edit-space" class="btn">Edit Space</a>
</div>
